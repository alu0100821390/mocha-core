{
  "name": "mocha3",
  "version": "0.0.0",
  "description": "next-gen Mocha",
  "license": "Apache-2.0",
  "repository": "https://github.com/boneskull/mocha3.git",
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com",
    "url": "https://mochajs.org"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=1.7.4"
  },
  "files": [
    "lib/",
    "dist/"
  ],
  "scripts": {
    "build": "parallel build:node build:browser",
    "build:browser": "mkdirp dist && parallel build:browser:main build:browser:min",
    "build:browser:main": "browserify --require es6-symbol/implement --require es6-map/implement --require es6-set/implement --standalone mocha --plugin [ bannerify --file .banner.ejs --pkg package.json ] src --outfile dist/mocha.js",
    "build:browser:min": "browserify --require es6-symbol/implement --require es6-map/implement --require es6-set/implement --standalone mocha --plugin [ bannerify --file .banner.ejs --pkg package.json ] --global-transform uglifyify src --outfile dist/mocha.min.js",
    "build:node": "rimraf lib && babel src --out-dir lib",
    "bump:major": "npm version major -m 'Release v%s'",
    "bump:minor": "npm version minor -m 'Release v%s'",
    "bump:patch": "npm version patch -m 'Release v%s'",
    "check": "parallel nsp deps",
    "deps": "parallel deps:missing deps:extra",
    "deps:extra": "dependency-check package.json --extra --no-dev",
    "deps:missing": "dependency-check package.json --missing",
    "deps:update": "updtr",
    "lint": "eslint src/ test/ .*.js",
    "nsp": "nsp check",
    "prepublish": "npm run build",
    "preversion": "npm run test",
    "publish-please": "publish-please",
    "test": "parallel check lint test:unit",
    "test:unit": "parallel test:unit:node test:unit:browser",
    "test:unit:browser": "karma start .karma.conf.js --single-run",
    "test:unit:node": "babel-node node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha -- --require test/unit/fixture.js --recursive test/unit/"
  },
  "keywords": [],
  "dependencies": {
    "bluebird": "^3.0.5",
    "debug": "^2.2.0",
    "dependency-graph": "^0.4.1",
    "es6-map": "^0.1.3",
    "es6-set": "^0.1.3",
    "es6-symbol": "^3.0.2",
    "fsm": "^1.0.2",
    "lodash": "^3.10.1",
    "mocha-ui-bdd": "file:../mocha-ui-bdd",
    "stampit": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-eslint": "^4.1.5",
    "babel-istanbul": "^0.6.0",
    "babel-plugin-lodash": "^1.1.0",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "bannerify": "vekat/bannerify#feature-option",
    "browserify": "^12.0.2",
    "chai": "^3.4.0",
    "chai-as-promised": "^5.1.0",
    "chai-eventemitter": "^1.1.1",
    "dependency-check": "^2.5.1",
    "eslint": "^1.10.3",
    "eslint-config-semistandard": "^5.0.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-lodash3": "^0.5.1",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-no-class": "^0.1.0",
    "eslint-plugin-prototype-chain": "^0.1.0",
    "eslint-plugin-standard": "^1.3.1",
    "istanbul": "^0.4.1",
    "js-yaml": "^3.4.3",
    "karma": "^0.13.19",
    "karma-browserify": "^4.4.2",
    "karma-chrome-launcher": "^0.2.2",
    "karma-cli": "^0.1.1",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^0.2.3",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "npm-parallel": "boneskull/npm-parallel#boneskull-patch-1",
    "nsp": "^2.2.0",
    "phantomjs": "^1.9.19",
    "phantomjs-polyfill": "0.0.1",
    "pre-commit": "^1.1.2",
    "publish-please": "^1.1.0",
    "rimraf": "^2.4.4",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "uglifyify": "^3.0.1",
    "updtr": "^0.1.6"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "sourceMapRelative": "."
        }
      ]
    ]
  }
}
