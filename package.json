{
  "name": "mocha3",
  "version": "0.0.0",
  "description": "next-gen Mocha",
  "license": "Apache-2.0",
  "repository": "https://github.com/boneskull/mocha3.git",
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com",
    "url": "https://mochajs.org"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=1.7.4"
  },
  "files": [
    "lib/"
  ],
  "scripts": {
    "test": "npm run lint",
    "build": "npm run build-node; npm run build-browser",
    "build-node": "rimraf lib; babel src --out-dir lib",
    "build-browser": "npm run build-browser-main; npm run build-browser-min",
    "build-browser-main": "browserify --standalone mocha src --outfile mocha.js",
    "build-browser-min": "browserify --standalone mocha --global-transform uglifyify src --outfile mocha.min.js",
    "lint": "eslint src/ test/ .*.js",
    "test-unit": "npm run test-node-unit; npm run test-browser-unit",
    "test-node-unit": "babel-node node_modules/.bin/_mocha --require test/unit/fixture.js --recursive test/unit/",
    "test-browser-unit": "karma start .karma.conf.js"
  },
  "keywords": [],
  "dependencies": {
    "babel-polyfill": "^6.2.0",
    "bluebird": "^3.0.5",
    "continuation-local-storage": "^3.1.4",
    "core-js": "^1.2.6",
    "debug": "^2.2.0",
    "dependency-graph": "^0.4.1",
    "errorist": "^0.1.4",
    "lodash": "^3.10.1",
    "mocha-ui-bdd": "file:../mocha-ui-bdd",
    "stampit": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.3.13",
    "babel-core": "^6.1.2",
    "babel-eslint": "^4.1.5",
    "babel-istanbul": "^0.5.9",
    "babel-preset-es2015": "^6.1.2",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-istanbul": "^0.2.1",
    "chai": "^3.4.0",
    "chai-as-promised": "^5.1.0",
    "chai-eventemitter": "^1.1.0",
    "eslint": "^1.10.3",
    "eslint-config-semistandard": "^5.0.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-lodash3": "^0.4.0",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-no-class": "^0.1.0",
    "eslint-plugin-prototype-chain": "^0.1.0",
    "eslint-plugin-standard": "^1.3.1",
    "istanbul": "^0.4.1",
    "js-yaml": "^3.4.3",
    "karma": "^0.13.15",
    "karma-browserify": "^4.4.2",
    "karma-cli": "^0.1.1",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.3",
    "karma-phantomjs2-launcher": "^0.3.2",
    "mocha": "^2.3.4",
    "phantomjs2-ext": "^0.1.0",
    "pre-commit": "^1.1.2",
    "publish-please": "^1.1.0",
    "rimraf": "^2.4.4",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "uglifyify": "^3.0.1"
  },
  "browser": {
    "lib/index.js": "mocha.js"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
