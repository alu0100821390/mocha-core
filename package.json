{
  "name": "mocha3",
  "version": "0.0.0",
  "description": "next-gen Mocha",
  "license": "Apache-2.0",
  "repository": "https://github.com/boneskull/mocha3.git",
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com",
    "url": "https://mochajs.org"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=1.7.4"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "files": [
    "./lib/",
    "./mocha.js",
    "./mocha.min.js",
    "./mocha.min.js.map"
  ],
  "scripts": {
    "test": "npm run lint",
    "build": "npm run build-node && npm run build-browser",
    "build-node": "babel src --out-dir lib",
    "build-browser": "browserify --standalone mocha --debug src --outfile mocha.js && browserify --standalone mocha --debug --plugin [ minifyify --map mocha.min.js.map --output mocha.min.js.map ] src/index.js --outfile mocha.min.js",
    "lint": "eslint src/ test/ .wallaby.js",
    "prepublish": "npm run build",
    "test-unit": "npm run test-node-unit test-browser-unit",
    "test-node-unit": "babel-node node_modules/.bin/_mocha --require test/unit/fixture.js test/unit/*.spec.js",
    "test-browser-unit": "karma start"
  },
  "keywords": [],
  "dependencies": {
    "babel-polyfill": "^6.2.0",
    "bluebird": "^3.0.5",
    "continuation-local-storage": "^3.1.4",
    "debug": "^2.2.0",
    "dependency-graph": "^0.4.1",
    "errorist": "^0.1.4",
    "joi": "^7.0.1",
    "lodash": "^3.10.1",
    "stampit": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.3.13",
    "babel-core": "^6.1.2",
    "babel-eslint": "^4.1.5",
    "babel-istanbul": "^0.5.9",
    "babel-preset-es2015": "^6.1.2",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-istanbul": "^0.2.1",
    "chai": "^3.4.0",
    "chai-as-promised": "^5.1.0",
    "eslint": "^1.10.3",
    "eslint-config-semistandard": "^5.0.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-lodash3": "^0.4.0",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-no-class": "^0.1.0",
    "eslint-plugin-prototype-chain": "^0.1.0",
    "eslint-plugin-standard": "^1.3.1",
    "istanbul": "^0.4.1",
    "js-yaml": "^3.4.3",
    "karma": "^0.13.15",
    "karma-cli": "^0.1.1",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.3",
    "karma-phantomjs2-launcher": "^0.3.2",
    "minifyify": "^7.1.0",
    "mocha": "^2.3.4",
    "mochify": "^2.14.2",
    "phantomjs2-ext": "^0.1.0",
    "pre-commit": "^1.1.2",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0"
  },
  "browser": {
    "net": false,
    "crypto": false,
    "isemail": false,
    "moment": false,
    "lib/index.js": "mocha.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
