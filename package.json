{
  "name": "mocha3",
  "version": "0.0.0",
  "description": "next-gen Mocha",
  "license": "Apache-2.0",
  "repository": "https://github.com/boneskull/mocha3.git",
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com",
    "url": "https://mochajs.org"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=1.7.4"
  },
  "files": [
    "lib/",
    "dist/"
  ],
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:browser": "mkdirp dist && npm run build:browser:main && npm run build:browser:min",
    "build:browser:main": "browserify --standalone mocha --plugin [ bannerify --file .banner.ejs --pkg package.json ] src --outfile dist/mocha.js",
    "build:browser:min": "browserify --standalone mocha --plugin [ bannerify --file .banner.ejs --pkg package.json ] --global-transform uglifyify src --outfile dist/mocha.min.js",
    "build:node": "rimraf lib && babel src --out-dir lib",
    "check": "nsp check && npm run deps",
    "deps": "npm run deps:missing && npm run deps:extra",
    "deps:extra": "dependency-check package.json --extra --no-dev --ignore-module rimraf --ignore-module mkdirp",
    "deps:missing": "dependency-check package.json",
    "lint": "eslint src/ test/ .*.js",
    "prepublish": "npm run check && npm run build",
    "publish-please": "publish-please",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "npm run test:unit:node && npm run test:unit:browser",
    "test:unit:browser": "karma start .karma.conf.js --single-run",
    "test:unit:node": "babel-node node_modules/.bin/_mocha --require test/unit/fixture.js --recursive test/unit/"
  },
  "keywords": [],
  "dependencies": {
    "bluebird": "^3.0.5",
    "core-js": "^2.0.0",
    "dependency-graph": "^0.4.1",
    "lodash": "^3.10.1",
    "mkdirp": "^0.5.1",
    "mocha-ui-bdd": "file:../mocha-ui-bdd",
    "rimraf": "^2.4.4",
    "stampit": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.3.13",
    "babel-core": "^6.1.2",
    "babel-eslint": "^4.1.5",
    "babel-istanbul": "^0.5.9",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "bannerify": "vekat/bannerify#feature-option",
    "browserify": "^12.0.1",
    "browserify-istanbul": "^0.2.1",
    "chai": "^3.4.0",
    "chai-as-promised": "^5.1.0",
    "chai-eventemitter": "^1.1.0",
    "dependency-check": "^2.5.1",
    "eslint": "^1.10.3",
    "eslint-config-semistandard": "^5.0.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-lodash3": "^0.4.0",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-no-class": "^0.1.0",
    "eslint-plugin-prototype-chain": "^0.1.0",
    "eslint-plugin-standard": "^1.3.1",
    "istanbul": "^0.4.1",
    "js-yaml": "^3.4.3",
    "karma": "^0.13.15",
    "karma-browserify": "^4.4.2",
    "karma-cli": "^0.1.1",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.3",
    "karma-phantomjs-launcher": "^0.2.2",
    "mocha": "^2.3.4",
    "nsp": "^2.2.0",
    "phantomjs": "^1.9.19",
    "phantomjs-polyfill": "0.0.1",
    "pre-commit": "^1.1.2",
    "publish-please": "^1.1.0",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "uglifyify": "^3.0.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
