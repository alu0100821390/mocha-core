{
  "name": "mocha",
  "version": "0.0.0",
  "description": "next-gen Mocha",
  "license": "Apache-2.0",
  "repository": "https://github.com/boneskull/mocha3.git",
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com",
    "url": "https://mochajs.org"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=1.7.4"
  },
  "files": [
    "lib/",
    "dist/"
  ],
  "scripts": {
    "build": "NODE_ENV=dist parallel build:node build:browser",
    "build:browser": "mkdirp dist && parallel build:browser:main build:browser:min",
    "build:browser:main": "browserify --transform [ babelify --sourceMapRelative . ] --debug --standalone mocha --plugin [ bannerify --file .banner.ejs --pkg package.json ] src | exorcist dist/mocha.js.map > dist/mocha.js",
    "build:browser:min": "browserify --transform [ babelify --sourceMapRelative . ] --debug --standalone mocha --plugin [ bannerify --file .banner.ejs --pkg package.json ] --plugin [ minifyify --map dist/mocha.min.js.map --output dist/mocha.min.js.map ] src > dist/mocha.min.js",
    "build:node": "rimraf lib && babel src --out-dir lib",
    "bump:major": "npm version major -m 'Release v%s'",
    "bump:minor": "npm version minor -m 'Release v%s'",
    "bump:patch": "npm version patch -m 'Release v%s'",
    "check": "parallel nsp deps",
    "deps": "npm run build:node && parallel deps:missing deps:extra",
    "deps:extra": "dependency-check package.json --extra --no-dev -i debug -i mocha-ui-bdd -i rc-yaml -i zone.js -i graceful-fs",
    "deps:missing": "dependency-check package.json --missing",
    "deps:update": "updtr",
    "lint": "eslint src/ test/ .*.js",
    "nsp": "nsp check",
    "prepublish": "npm run build",
    "preversion": "npm run test",
    "publish-please": "publish-please",
    "test": "parallel check lint test:node test:browser",
    "test:browser": "parallel test:browser:unit",
    "test:browser:unit": "karma start .karma.conf.js --single-run",
    "test:node": "parallel test:node:unit",
    "test:node:unit": "babel-node node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha -- --require test/unit/fixture.js --recursive test/unit/",
    "test:unit": "parallel test:node:unit test:browser:unit"
  },
  "keywords": [],
  "dependencies": {
    "async-listener": "^0.5.6",
    "bluebird": "^3.0.5",
    "core-js": "^2.0.3",
    "debug": "^2.2.0",
    "dependency-graph": "^0.4.1",
    "errorist": "^0.1.4",
    "fsm": "^1.0.2",
    "graceful-fs": "^4.1.2",
    "highland": "^2.6.0",
    "lodash": "^4.0.0",
    "mocha-ui-bdd": "file:../mocha-ui-bdd",
    "rc-yaml": "^0.1.0",
    "resolve-dep": "^0.5.3",
    "source-map-support": "^0.4.0",
    "stampit": "^2.1.1",
    "zone.js": "^0.5.10"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.5",
    "babel-istanbul": "^0.6.0",
    "babel-plugin-lodash": "^2.0.1",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "bannerify": "vekat/bannerify#feature-option",
    "brfs": "^1.4.3",
    "browserify": "^13.0.0",
    "chai": "^3.4.0",
    "chai-as-promised": "^5.1.0",
    "chai-eventemitter": "^1.1.1",
    "clarify": "^1.0.5",
    "dependency-check": "^2.5.1",
    "eslint": "^1.10.3",
    "eslint-config-import": "^0.9.1",
    "eslint-config-semistandard": "^5.0.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-import": "^0.12.1",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-no-class": "^0.1.0",
    "eslint-plugin-prototype-chain": "^0.1.0",
    "eslint-plugin-standard": "^1.3.1",
    "exorcist": "^0.4.0",
    "globby": "^4.0.0",
    "karma": "^0.13.19",
    "karma-browserify": "^5.0.1",
    "karma-chrome-launcher": "^0.2.2",
    "karma-cli": "^0.1.1",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^1.0.0",
    "minifyify": "^7.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "npm-parallel": "boneskull/npm-parallel#boneskull-patch-1",
    "nsp": "^2.2.0",
    "phantomjs-prebuilt": "^2.1.4",
    "pre-commit": "^1.1.2",
    "publish-please": "^1.1.0",
    "rimraf": "^2.4.4",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "updtr": "^0.1.6",
    "trace": "^2.0.2",
    "wallabify": "0.0.13",
    "watchify": "^3.7.0",
    "zone.js": "github:boneskull/zone.js#tsd-install-prepublish"
  },
  "browser": {
    "./src/util/async-listener.js": "./src/util/async-listener.browser.js",
    "./src/plugins/resolver.js": "./src/plugins/resolver.browser.js",
    "./src/options/rc.js": "./src/options/rc.browser.js",
    "trace": false,
    "clarify": false
  }
}
