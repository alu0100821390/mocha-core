{
  "name": "mocha",
  "version": "0.0.0",
  "description": "next-gen Mocha",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/mocha3.git"
  },
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com",
    "url": "https://mochajs.org"
  },
  "main": "lib/",
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=1.7.4"
  },
  "files": [
    "lib/",
    "dist/",
    "src/"
  ],
  "scripts": {
    "build": "parallel build:node build:browser",
    "build:browser": "mkdirp dist && parallel build:browser:main build:browser:min",
    "build:browser:main": "BABEL_ENV=dist browserify --debug --standalone mocha --transform [ babelify --sourceMapRelative . ] --plugin [ bannerify --file .banner.ejs --pkg package.json ] src | exorcist dist/mocha.js.map > dist/mocha.js",
    "build:browser:min": "BABEL_ENV=dist browserify --debug --standalone mocha --transform [ babelify --sourceMapRelative . ] --plugin [ bannerify --file .banner.ejs --pkg package.json ] --plugin [ minifyify --map dist/mocha.min.js.map --output dist/mocha.min.js.map ] src > dist/mocha.min.js",
    "build:node": "BABEL_ENV=dist rimraf lib && babel src --out-dir lib",
    "bump:major": "npm version major -m 'Release v%s'",
    "bump:minor": "npm version minor -m 'Release v%s'",
    "bump:patch": "npm version patch -m 'Release v%s'",
    "check": "parallel nsp deps",
    "deps": "npm run build:node && parallel deps:missing deps:extra",
    "deps:extra": "dependency-check package.json --extra --no-dev -i debug -i mocha-ui-bdd -i rc-yaml -i zone.js -i graceful-fs",
    "deps:missing": "dependency-check package.json --missing",
    "deps:update": "updtr",
    "lint": "eslint src/ test/ .*.js",
    "nsp": "nsp check",
    "prepublish": "npm run build",
    "preversion": "npm run test",
    "publish-please": "publish-please",
    "test": "npm run lint && nyc --require babel-core/register npm run test:node && npm run test:browser",
    "test:browser": "karma start .karma.conf.js --single-run",
    "test:node": "npm run test:node:unit && npm run test:node:e2e",
    "test:node:e2e": "mocha --compilers=js:babel-core/register --color --require ./test/fixture --timeout 0 --recursive test/e2e/",
    "test:node:unit": "mocha --compilers=js:babel-core/register --color --require ./test/fixture --timeout 0 --recursive test/unit/",
    "test:unit": "npm run test:node:unit && npm run test:browser:unit"
  },
  "keywords": [],
  "dependencies": {
    "async-listener": "^0.5.8",
    "babel-polyfill": "^6.6.1",
    "check-more-types": "^2.12.0",
    "debug": "^2.2.0",
    "dependency-graph": "^0.4.1",
    "fsm": "^1.0.2",
    "fsm-as-promised": "github:vstirbu/fsm-as-promised",
    "graceful-fs": "^4.1.2",
    "kefir": "^3.2.1",
    "lazy-ass": "^1.4.0",
    "lodash": "^4.6.1",
    "mocha-ui-bdd": "file:../mocha-ui-bdd",
    "rc-yaml": "^0.1.0",
    "resolve-dep": "^0.5.3",
    "source-map-support": "^0.4.0",
    "stampit": "^2.1.1",
    "uuid": "^2.0.1",
    "zone.js": "^0.5.15"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.0",
    "babel-eslint": "^5.0.0",
    "babel-plugin-lodash": "^2.2.1",
    "babel-plugin-rewire": "^1.0.0-rc-1",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "bannerify": "vekat/bannerify#feature-option",
    "browserify": "^13.0.0",
    "chai": "^3.4.0",
    "chai-as-promised": "^5.1.0",
    "chai-eventemitter": "^1.1.1",
    "clarify": "^1.0.5",
    "dependency-check": "^2.5.1",
    "eslint": "^1.10.3",
    "eslint-config-import": "^0.9.1",
    "eslint-config-semistandard": "^5.0.1",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-import": "^0.12.1",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-no-class": "^0.1.0",
    "eslint-plugin-prototype-chain": "^0.1.0",
    "eslint-plugin-standard": "^1.3.1",
    "exorcist": "^0.4.0",
    "globby": "^4.0.0",
    "jsdoc": "github:jsdoc3/jsdoc",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.1",
    "karma-chrome-launcher": "^0.2.2",
    "karma-mocha": "^0.2.1",
    "karma-mocha-clean-reporter": "0.0.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-source-map-support": "^1.1.0",
    "minifyify": "^7.3.2",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "npm-parallel": "boneskull/npm-parallel#boneskull-patch-1",
    "nsp": "^2.2.0",
    "nyc": "^6.0.0",
    "phantomjs-prebuilt": "^2.1.5",
    "pre-commit": "^1.1.2",
    "publish-please": "^1.1.0",
    "rimraf": "^2.4.4",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "trace": "^2.3.0",
    "updtr": "^0.1.6",
    "wallabify": "0.0.14",
    "watchify": "^3.7.0"
  },
  "browser": {
    "./src/util/execution-context.js": "./src/util/execution-context.browser.js",
    "./src/plugins/resolver.js": "./src/plugins/resolver.browser.js",
    "./src/options/rc.js": "./src/options/rc.browser.js",
    "trace": false,
    "clarify": false
  }
}
